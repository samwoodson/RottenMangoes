
<%= form_tag(movies_path, method: "get", id: "search-form")  do %>
  <%= fields_for :movie do |f| %>
    
<!-- <%= f.label :title %><br /> -->
      <%= f.text_field :title, value: (params[:movie][:title] if params[:movie]), class: "search-query", placeholder: "Movie Title or Director:", type: "search", data: {autocomplete: autocomplete_movie_title_movies_path} %>
     
    <div>
    <%= f.select :duration, options_for_select(
      [
        ['Any duration', '0-1000'],
        ['Under 90 mins', '0-90'],
        ['90-120 mins', '90-120'],
        ['Over 120 minutes', '120-1000']
      ]
    ) %>
    </div>
  <% end %>
  <div>
    <%= submit_tag "Search", name: nil %>
  </div>
<% end %>

