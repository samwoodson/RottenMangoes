<div class="pin">
  <%= if movie.image? ; image_tag movie.image.thumb else link_to image_tag(movie.poster_image_url), movie_path(movie) end %>
  <h2><%= link_to movie.title, movie_path(movie) %> </h2>
  <h3>Dir. <%= movie.director %></h3>
  <h3> <small><%= formatted_date(movie.release_date) %></small></h3>
  <h4><%= movie.runtime_in_minutes %> minutes | <%= movie.review_average %> /10</h4>
  <p><%= movie.description %></p>
</div>